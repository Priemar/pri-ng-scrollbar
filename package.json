{
  "name": "pri-ng-scrollbar-demo",
  "version": "3.0.1",
  "license": "MIT",
  "description": "Custom overlay scrollbars using native scrolling mechanism, for angular outside angular change detection. now also usable as web-component in all web applications",
  "homepage": "https://github.com/Priemar/pri-ng-scrollbar",
  "author": {
    "name": "Mario Prieschl",
    "url": "http://github.com/Priemar"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Priemar/pri-ng-scrollbar.git"
  },
  "bugs": {
    "url": "https://github.com/Priemar/pri-ng-scrollbar/issues"
  },
  "keywords": [
    "scrollbar",
    "scroll",
    "custom",
    "native",
    "optimized",
    "webcomponent",
    "angular",
    "performance"
  ],
  "scripts": {
    "update": "ng update",
    "update:all": "ng update --all --force",
    "start": "ng run pri-ng-scrollbar-demo:serve --host 0.0.0.0 --port 4200",
    "start:lib": "ng run pri-ng-scrollbar:build:production --watch",
    "build": "npm run build:lib && ng run pri-ng-scrollbar-demo:build:production --base-href https://priemar.github.io/pri-ng-scrollbar/",
    "build:lib": "ng run pri-ng-scrollbar:build:production && node build/copy.theme.js && npm run build:web-component",
    "build:web-component": "ng run wc-pri-ng-scrollbar:build:production && node projects/web-component/bundle.js",
    "publish": "npm publish dist/pri-ng-scrollbar"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.0.0",
    "@angular/cdk": "^8.0.0",
    "@angular/common": "~8.0.0",
    "@angular/compiler": "~8.0.0",
    "@angular/core": "~8.0.0",
    "@angular/elements": "^8.0.0",
    "@angular/flex-layout": "^9.0.0-beta.29",
    "@angular/forms": "~8.0.0",
    "@angular/material": "^8.0.0",
    "@angular/platform-browser": "~8.0.0",
    "@angular/platform-browser-dynamic": "~8.0.0",
    "@angular/router": "^8.0.0",
    "@webcomponents/custom-elements": "^1.2.4",
    "core-js": "^2.6.5",
    "rxjs": "~6.5.2",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.0",
    "@angular-devkit/build-ng-packagr": "~0.800.0",
    "@angular/cli": "~8.0.0",
    "@angular/compiler-cli": "~8.0.0",
    "@angular/language-service": "~8.0.0",
    "@types/fs-extra": "^5.1.0",
    "@types/jasmine": "~3.3.12",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~12.0.0",
    "codelyzer": "^5.0.1",
    "concat": "^1.0.3",
    "fs-extra": "^7.0.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.5",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "ng-packagr": "^5.2.0",
    "protractor": "~5.4.2",
    "ts-node": "~8.1.0",
    "tsickle": "0.35.0",
    "tslib": "^1.9.0",
    "tslint": "~5.16.0",
    "typescript": "3.4.5"
  }
}
